package fuscia:log@0.1.0;

/// Logging interface that routes to OpenTelemetry on the host.
interface log {
  /// Log level for messages.
  enum level {
    trace,
    debug,
    info,
    warn,
    error,
  }

  /// Log a message at the specified level.
  /// The host routes these to OpenTelemetry with appropriate span context.
  log: func(level: level, message: string);
}
